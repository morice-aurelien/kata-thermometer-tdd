{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2019"],
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
    }
  },
  "files": [
    "src"
  ],
    "include": [
        "src/**/*.ts"
    ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}
